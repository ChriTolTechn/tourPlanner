<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox fx:id="box" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.technikum.tolanzeilinger.tourplanner.view.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>

    <Button text="Count" onAction="#onCounterClick"/>
    <Label fx:id="counter" text="0"/>

    <TextField prefWidth="100" fx:id="first" textFormatter=""/>
    <TextField prefWidth="100" fx:id="second" />
    <Button text="add" onAction="#onAddClick"/>
    <Label fx:id="sum" text="0"/>
</VBox>
